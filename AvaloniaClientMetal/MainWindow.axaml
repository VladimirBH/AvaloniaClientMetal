<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaClientMetal.MainWindow"
        Title="Metal"
        WindowStartupLocation="CenterScreen"
        Width="350" Height="350" CanResize="False">
    <Grid Margin="15" RowDefinitions="1*, 1*, 1*" ColumnDefinitions="*">
        <TextBlock Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30">Авторизация</TextBlock>
        <Grid Grid.Column="0" Grid.Row="1" RowDefinitions="1*,1*" ColumnDefinitions="1*,2.5*">
            <TextBlock Grid.Column="0" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center">Логин:</TextBlock>
            <TextBlock Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center">Пароль:</TextBlock>
            <TextBox Grid.Column="1" Grid.Row="0"  Width="200" HorizontalAlignment="Left"/>
            <TextBox Grid.Column="1" Grid.Row="1" PasswordChar="*" Width="200" HorizontalAlignment="Left"/>
        </Grid>
        <Button Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" HorizontalContentAlignment="Center" Margin="25">Войти</Button>
		
    </Grid>
</Window>
